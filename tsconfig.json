{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["ES2019"],
        "target": "es2017",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "./dist",
        "sourceMap": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
